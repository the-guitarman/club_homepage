<div class="row">
  <div class="col-xs-12 col-sm-8 col-sm-offset-2">
    <div class="jumbotron content-box">
      <h2><%= gettext("all") <> " " <> gettext("secrets") %></h2>

      <p>
        <%= link gettext("create_new_secret"), to: secret_path(@conn, :new), class: "btn btn-default" %>
      </p>

      <table class="table">
        <thead>
          <tr>
            <th><%= gettext("secret") %></th>
            <th><%= gettext("expiry_date") %></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <%= for secret <- @secrets do %>
              <tr>
                <td><%= secret.key %></td>
                <td><%= Timex.DateFormat.format!(secret.expires_at, "%d.%m.%Y %H:%M", :strftime) %></td>

                <td class="text-right">
                  <%= link gettext("delete"), to: secret_path(@conn, :delete, secret), method: :delete, data: [confirm: "Are you sure?"], class: "btn btn-danger" %>
                </td>
              </tr>
          <% end %>
        </tbody>
      </table>

      <p>
        <%= link gettext("create_new_secret"), to: secret_path(@conn, :new), class: "btn btn-default" %>
      </p>

    </div>
  </div>
</div>
