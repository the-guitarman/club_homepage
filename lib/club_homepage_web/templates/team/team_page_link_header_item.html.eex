<li role="presentation" class="<%= if @active_tab === @tab, do: "active" %>">
  <%= if @active_tab === @tab do %>
    <a href="#"><%= Gettext.gettext(ClubHomepageWeb.Gettext, @gettext_key) %></a>
  <% else %>
    <%= link Gettext.gettext(ClubHomepageWeb.Gettext, @gettext_key), to: @link %>
  <% end %>
</li>
