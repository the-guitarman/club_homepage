<div class="row">
  <div class="col-xs-12 col-sm-8 col-sm-offset-2">
    <div class="jumbotron content-box">
      <h2><%= gettext("all") <> " " <> gettext("meeting_points") %></h2>

      <p>
        <%= link gettext("create_new_meeting_point"), to: Routes.meeting_point_path(@conn, :new), class: "btn btn-default" %>
        <%= link gettext("all") <> " " <> gettext("addresses"), to: Routes.address_path(@conn, :index), class: "btn btn-default" %>
      </p>
      
      <table class="table">
        <thead>
          <tr>
            <th><%= gettext("meeting_point") %> - <%= gettext("address") %></th>

            <th></th>
          </tr>
        </thead>
      <%= for meeting_point <- @meeting_points do %>
          <tr>
            <td>
              <a class="anchor" name="meeting-point-<%= meeting_point.id %>"><strong><%= meeting_point.name %></strong></a> - <small><%= full_address(meeting_point) %></small>
            </td>

            <td class="text-ht">
              <%= link gettext("edit"), to: Routes.meeting_point_path(@conn, :edit, meeting_point), class: "btn btn-default" %>
            </td>
          </tr>
      <% end %>
        </tbody>
      </table>

      <p>
        <%= link gettext("create_new_meeting_point"), to: Routes.meeting_point_path(@conn, :new), class: "btn btn-default" %>
        <%= link gettext("all") <> " " <> gettext("addresses"), to: Routes.address_path(@conn, :index), class: "btn btn-default" %>
      </p>
    </div>
  </div>
</div>
