<div class="row">
  <div class="col-xs-12 col-sm-8 col-sm-offset-2">
    <div class="jumbotron content-box">
      <h2><%= gettext("all") <> " " <> gettext("payment_lists") %></h2>

      <p>
        <%= link gettext("create_payment_list"), to: Routes.payment_list_path(@conn, :new), class: "btn btn-default" %>
      </p>

      <table class="table">
        <thead>
          <tr>
            <th><%= gettext("payment_list_creator") %></th>
            <th><%= gettext("payment_list_deputy") %></th>
            <th><%= gettext("title") %></th>
            <th><%= gettext("number_of_debitors") %></th>

            <th></th>
          </tr>
        </thead>
        <tbody>
      <%= for payment_list <- @payment_lists do %>
          <tr>
            <td><%= internal_user_name(payment_list.user) %></td>
            <td>
              <%= if (payment_list.deputy_id) do %>
                <%= internal_user_name(payment_list.deputy) %>
              <% end %>
            </td>
            <td><%= payment_list.title %></td>
            <td></td>

            <td class="text-right">
              <%= link "Show", to: Routes.payment_list_path(@conn, :show, payment_list), class: "btn btn-default" %>
              <%= link "Edit", to: Routes.payment_list_path(@conn, :edit, payment_list), class: "btn btn-default" %>
              <%= link "Delete", to: Routes.payment_list_path(@conn, :delete, payment_list), method: :delete, data: [confirm: gettext("are_you_sure")], class: "btn btn-danger" %>
            </td>
          </tr>
      <% end %>
        </tbody>
      </table>

      <p>
        <%= link gettext("create_payment_list"), to: Routes.payment_list_path(@conn, :new), class: "btn btn-default" %>
      </p>
    </div>
  </div>
</div>
