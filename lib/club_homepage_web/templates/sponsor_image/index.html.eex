<div class="row">
  <div class="col-xs-12 col-sm-8 col-sm-offset-2">
    <div class="jumbotron content-box">
      <h2><%= gettext("all") <> " " <> gettext("sponsor_images") %></h2>

      <table class="table">
        <thead>
          <tr>
            <th><%= gettext("name") %></th>
            <th><%= gettext("sponsor_image") %></th>

            <th></th>
          </tr>
        </thead>
        <tbody>
      <%= for sponsor_image <- @sponsor_images do %>
          <tr>
            <td><%= sponsor_image.name %></td>
            <td><%= uploader_image_tag ClubHomepageWeb.SponsorUploader, sponsor_image, :logo %></td>

            <td class="text-right">
              <%= link gettext("edit"), to: Routes.sponsor_image_path(@conn, :edit, sponsor_image), class: "btn btn-default" %>
              <%= link gettext("delete"), to: Routes.sponsor_image_path(@conn, :delete, sponsor_image), method: :delete, data: [confirm: gettext("confirm_question_are_you_sure")], class: "btn btn-danger" %>
            </td>
          </tr>
      <% end %>
        </tbody>
      </table>

      <%= link gettext("create_new_sponsor_image"), to: Routes.sponsor_image_path(@conn, :new), class: "btn btn-default" %>
    </div>
  </div>
</div>
