<div class="row">
  <div class="col-xs-12 col-sm-8 col-sm-offset-2">
    <div class="jumbotron content-box">
      <h2><%= gettext("all") <> " " <> gettext("teams") %></h2>

      <p>
        <%= link gettext("create_new_team"), to: Routes.team_path(@conn, :new), class: "btn btn-default" %>
      </p>

      <table class="table">
        <tbody>
          <tr>
            <th><%= gettext("order") %></th>
            <th><%= gettext("team") %></th>
            <th class="text-center"><%= gettext("active") %></th>
            <th>&nbsp;</th>
          </tr>
          <%= for team <- @teams do %>
            <tr>
              <td><%= team.order %></td>
              <td><%= link team.name, to: team_with_season_path(@conn, team), class: "btn" %></td>
              <td class="text-center"><%= if team.active == true, do: gettext("yes"), else: gettext("no") %></td>
              <td class="text-right">
                <%= link gettext("edit"), to: Routes.team_path(@conn, :edit, team), class: "btn btn-default" %>
                <%#= link gettext("show"), to: Routes.team_path(@conn, :show, team), class: "btn btn-default btn-xs" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <p>
        <%= link gettext("create_new_team"), to: Routes.team_path(@conn, :new), class: "btn btn-default" %>
      </p>
    </div>
  </div>
</div>
